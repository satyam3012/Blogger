<%- include("../../partials/header") -%>
<body class="arch">
  <div class="ui main container segment">
    <div class="ui huge header">
      <%= blog.title%>
     </div>
     <div class="ui top attached" style="margin-bottom:20px;">
         <div class="item">
             <img class="ui centered rounded image" src="<%= blog.image %>" alt="">

         <div class="content">
           <span><%= blog.created.toDateString() %></span>
         </div>
         <div class="description" style="margin-top:20px;">
           <p><%= blog.body %></p>
         </div>
         <a class="btn btn-info" href="/categories/technical/architecture/<%= blog._id%>/edit">Edit</a>
         <form style="display:inline-block;" id="delete" action="/categories/technical/architecture/<%= blog._id%>?_method=DELETE" method="post">
           <button class="btn btn-danger" type="submit" name="button">DELETE</button>
         </form>
         </div>
     </div>
     <p><a class="btn btn-success" href="/categories/technical/architecture/<%= blog._id %>/comments/new">Add New Comment</a></p>
     <% blog.comment.forEach(function(comment){%>
       <div class="">
         <strong><%= comment.author.username %></strong> :  <%= comment.text %>
       </div>
    <% }); %>
  </div>
</body>

<%- include("../../partials/footer") -%>
